@model IEnumerable<AI_Application.Models.SystemConfig>

@{
    ViewData["Title"] = "Cấu hình hệ thống";
}

<h2>Cấu hình hệ thống</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Thêm cấu hình</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Key</th>
            <th>Value</th>
            <th>Mô tả</th>
            <th>Ngày cập nhật</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Key</td>
                <td>@item.Value</td>
                <td>@item.Description</td>
                <td>@item.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Sửa</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@model AI_Application.Models.CauHoi

@{
    ViewData["Title"] = "Hỏi bài tập";
}

<h2>Hỏi bài tập</h2>
<p>Nếu có bài tập nào chưa rõ, bạn hãy gửi câu hỏi bên dưới để được giảng viên hỗ trợ.</p>

<form asp-action="AskExercise" method="post">
    <div class="form-group">
        <label for="TieuDe">Tiêu đề</label>
        <input asp-for="TieuDe" class="form-control" placeholder="Nhập tiêu đề câu hỏi" />
        <span asp-validation-for="TieuDe" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label for="LinhVuc">Lĩnh vực</label>
        <input asp-for="LinhVuc" class="form-control" placeholder="VD: C#, SQL, OOP..." />
        <span asp-validation-for="LinhVuc" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label for="NoiDung">Nội dung câu hỏi</label>
        <textarea asp-for="NoiDung" class="form-control" rows="5" placeholder="Nhập nội dung bài tập bạn muốn hỏi..."></textarea>
        <span asp-validation-for="NoiDung" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Gửi câu hỏi</button>
    <a class="btn btn-secondary mt-3" href="/Students/Index">Quay lại trang Sinh Viên</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

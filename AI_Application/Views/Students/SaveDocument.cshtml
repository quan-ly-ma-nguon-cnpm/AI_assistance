@{
    ViewData["Title"] = "Lưu tài liệu";
}
<h2>Lưu tài liệu</h2>

<form asp-action="SaveDocument" method="post">
    <div class="form-group">
        <label for="title">Tên tài liệu:</label>
        <input name="title" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="content">Nội dung:</label>
        <textarea name="content" class="form-control" rows="8" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Lưu</button>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success mt-3">@ViewBag.Message</div>
}

<a class="btn btn-secondary mt-4" href="/Students/Index">Quay lại trang Sinh Viên</a>

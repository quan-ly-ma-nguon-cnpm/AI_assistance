@{
    ViewData["Title"] = "Giải thích Code";
}
<h2>Giải thích Code</h2>

<form asp-action="ExplainCode" method="post">
    <div class="form-group">
        <label for="code">Nhập đoạn code:</label>
        <textarea name="code" rows="8" class="form-control" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Giải thích</button>
</form>

@if (ViewBag.Explanation != null)
{
    <h4 class="mt-4">Kết quả giải thích:</h4>
    <div class="alert alert-info">
        @ViewBag.Explanation
    </div>
}

<a class="btn btn-secondary mt-4" href="/Students/Index">Quay lại trang Sinh Viên</a>

@model List<AI_Application.Models.PhanHoiCauHoi>

@{
    ViewData["Title"] = "Phản hồi từ giảng viên";
}

<h2 class="mt-4 mb-4 text-center text-primary">Phản hồi từ giảng viên</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info text-center">
        Hiện chưa có phản hồi nào.
    </div>
}
else
{
    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th style="width: 30%;">Tiêu đề câu hỏi</th>
                <th>Nội dung phản hồi</th>
                <th style="width: 15%;">Giảng viên</th>
                <th style="width: 20%;">Thời gian phản hồi</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CauHoi?.TieuDe</td>
                    <td>@item.NoiDung</td>
                    <td>@item.NguoiGui</td>
                    <td>@item.ThoiGianPhanHoi.ToString("dd/MM/yyyy HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
}

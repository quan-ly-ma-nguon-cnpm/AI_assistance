@model AI_Application.Models.UserEditViewModel


@{
    ViewData["Title"] = "Chỉnh sửa người dùng";
}
SS
<h2>Chỉnh sửa người dùng</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="UserName" class="form-label">Tên đăng nhập</label>
        <input asp-for="UserName" class="form-control" disabled />
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" disabled />
    </div>

    <div class="mb-3">
        <label>Chọn vai trò</label><br />
        @foreach (var role in Model.AllRoles)
        {
            <div class="form-check">
                <input type="checkbox" name="SelectedRoles" value="@role"
                       class="form-check-input"
                       @(Model.SelectedRoles.Contains(role) ? "checked" : "") />
                <label class="form-check-label">@role</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

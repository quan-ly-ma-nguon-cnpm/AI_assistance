@model AI_Application.Models.Users.Users_Information
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor  

@{
    ViewData["Title"] = "Edit User Information";
    var Username = HttpContextAccessor.HttpContext?.Session?.GetString("Username");
}

<h2>Edit User Information</h2>

@if (ViewBag.UserInfoEditMessage != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @ViewBag.UserInfoEditMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form asp-action="UserInformation" method="post">
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" required/>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" required/>
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ColleagueID"></label>
        <input asp-for="ColleagueID" class="form-control" required/>
        <span asp-validation-for="ColleagueID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" required/>
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MediaLinked"></label>
        <input asp-for="MediaLinked" class="form-control" required/>
        <span asp-validation-for="MediaLinked" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Username" value="@Username"/>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model AI_Application.Models.Users.Users_Information

@{
    ViewData["Title"] = "User Information";
}

<h2>User Information</h2>

<div class="card p-3">
    <dl class="row">
        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Phone Number</dt>
        <dd class="col-sm-9">@Model.PhoneNumber</dd>

        <dt class="col-sm-3">Colleague ID</dt>
        <dd class="col-sm-9">@Model.ColleagueID</dd>

        <dt class="col-sm-3">Address</dt>
        <dd class="col-sm-9">@Model.Address</dd>

        <dt class="col-sm-3">Media Linked</dt>
        <dd class="col-sm-9">
            <a href="@Model.MediaLinked" target="_blank">@Model.MediaLinked</a>
        </dd>
    </dl>

    <a asp-action="UserInformation" asp-controller = "Home" asp-route-id="@Model.Username" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

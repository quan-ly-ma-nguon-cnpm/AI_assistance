@model List<SEHannah.Models.CauHoiViewModel>

@{
    ViewData["Title"] = "Danh sách câu hỏi";
}

<h2>Danh sách câu hỏi</h2>

<table class="table">
    <thead>
        <tr>
            <th>Tiêu đề</th>
            <th>Lĩnh vực</th>
            <th>Ngày tạo</th>
            <th>Người gửi</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cauHoi in Model)
        {
            <tr>
                <td>@cauHoi.TieuDe</td>
                <td>@cauHoi.LinhVuc</td>
                <td>@cauHoi.NgayTao.ToString("dd/MM/yyyy")</td>
                <td>@cauHoi.NguoiGui</td>
                <td>
                    @(cauHoi.DaDuyet ? "Đã duyệt" : "Chưa duyệt")
                </td>
                <td>
                    <a class="btn btn-primary" asp-controller="GiangVien" asp-action="ChiTietCauHoi" asp-route-id="@cauHoi.Id">Chi tiết</a>
                </td>
            </tr>
        }
    </tbody>
</table>

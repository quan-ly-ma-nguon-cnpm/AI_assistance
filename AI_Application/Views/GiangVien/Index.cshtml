@model dynamic
@{
    ViewData["Title"] = "Trang Giảng Viên";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease-in-out;
        margin-bottom: 20px;
    }

    .card:hover {
        transform: translateY(-5px);
    }

    .card-body {
        padding: 25px;
        text-align: center;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: bold;
        color: #343a40;
        margin-bottom: 15px;
    }

    .card-icon {
        font-size: 3rem;
        margin-bottom: 15px;
    }

    h2 {
        text-align: center;
        margin-top: 30px;
        margin-bottom: 40px;
        color: #343a40;
        font-weight: 300;
    }

    .btn {
        width: 80%;
        padding: 10px 0;
        font-size: 1.1rem;
        border-radius: 8px;
    }

    .card-primary .card-icon { color: #007bff; }
    .card-success .card-icon { color: #28a745; }
    .card-warning .card-icon { color: #ffc107; }

</style>

<div class="container">
    <h2>Các Chức Năng Dành Cho Giảng Viên</h2>

    <div class="row justify-content-center">

        <div class="col-md-4 col-sm-6 mb-4">
            <div class="card card-primary h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <i class="bi bi-journal-text card-icon"></i>
                        <h5 class="card-title">Cập nhật kiến thức</h5>
                    </div>
                    <a class="btn btn-primary mt-auto" href="/GiangVien/CapNhatKienThuc">Truy cập</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 col-sm-6 mb-4">
            <div class="card card-success h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <i class="bi bi-card-list card-icon"></i>
                        <h5 class="card-title">Danh sách câu hỏi</h5>
                    </div>
                    <a class="btn btn-success mt-auto" href="/GiangVien/DanhSachCauHoi">Xem câu hỏi</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 col-sm-6 mb-4">
            <div class="card card-warning h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <i class="bi bi-chat-dots card-icon"></i>
                        <h5 class="card-title">Duyệt phản hồi</h5>
                    </div>
                    <a class="btn btn-warning mt-auto" href="/GiangVien/DuyetPhanHoi">Duyệt ngay</a>
                </div>
            </div>
        </div>

    </div>
</div>

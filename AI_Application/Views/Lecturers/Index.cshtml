    @model List<AI_Application.Models.PhanHoiCauHoi>
@{
    ViewData["Title"] = "Duyệt phản hồi";
}

<h2>Duyệt phản hồi từ sinh viên</h2>

@if (Model.Count == 0)
{
    <p>Không có phản hồi nào cần duyệt.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Sinh viên</th>
                <th>Nội dung</th>
                <th>Thời gian</th>
                <th>Duyệt</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.NguoiNhan</td>
                    <td>@item.NoiDung</td>
                    <td>@item.ThoiGianPhanHoi.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        <form asp-action="DuyetPhanHoi" asp-controller="Lecturers" method="post">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-success">Duyệt</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
